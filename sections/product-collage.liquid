        <div class="collage-item item2"><img src="image2.jpg" alt="Image 2"></div>
        <div class="collage-item item3"><img src="image3.jpg" alt="Image 3"></div>
        <div class="collage-item item4"><img src="image4.jpg" alt="Image 4"></div>
        <div class="collage-item item5"><img src="image5.jpg" alt="Image 5"></div>
        <div class="collage-item item6"><img src="image6.jpg" alt="Image 6"></div>
    </div>
