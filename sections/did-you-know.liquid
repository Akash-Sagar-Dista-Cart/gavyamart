

{%- comment -%}
  This is a Shopify section named "Feature Blocks".
  It will display a set of feature blocks with icons, titles, and short descriptions.
{%- endcomment -%}
<style>
  /* Basic styling */
  .feature-blocks {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
  }
  .feature-block {
    text-align: center;
    padding: 10px;
    border-radius: 10px;
    width: calc(25% - 20px);
  }
  .feature-block h3 {
    font-size: 1.6em;
    font-weight: 600;
    margin:0;
  }
  .feature-block p {
    font-size: 0.9em;
    line-height:1.3;
    
  }
  .did-you-know > div{
    overflow:auto;
  }
.did-you-know .btn-title span{
    display:inline-block;
    padding: 10px 30px;
    border-radius:30px;
    margin-top: 10px;
    background:#fff;
    color:#000;

}
.did-you-know .feature-block{
    display:flex;
    align-items: center;
    text-align: left;
    gap: 10px;
}

.did-you-know img{
width:{{section.settings.icon-size}}px;
height:{{section.settings.icon-size}}px;
}
.did-you-know .feature-blocks,
.did-you-know .btn-title,
.did-you-know .section-short-desc{
    max-width: 700px;
    margin: auto;
}
  /* Responsive styles */
  @media screen and (max-width: 768px) {
    .feature-block {
      width: calc(100% - 20px);
    }
  }
</style>
<div class="did-you-know">

    <div class="page-width color-{{ section.settings.color_scheme }} gradient ">
    <div class="{{section.settings.alignment}}">
        <h2 class="title inline-richtext {{ section.settings.heading_size }} {{ section.settings.alignment }}">
            {{ section.settings.title }}
        </h2>
    </div >
    <div class="section-short-desc {{section.settings.alignment}}">
    <span class="">
    {{ section.settings.description }}
    </span>
    </div>
    <div class="btn-title {{section.settings.alignment}}">
    <span class="button">{{ section.settings.secendory-title }}</span>
    </div>
    <div class="feature-blocks">
        {%- for block in section.blocks -%}
        {% assign img_uri = block.settings.icon | img_url:'40x' %}
        <div class="feature-block">
            <img src="{{ img_uri }}" alt="{{ block.settings.title }}">
            <p>{{ block.settings.title }}</p>
            <p>{{ block.settings.description }}</p>
        </div>
        {%- endfor -%}
    </div>
    </div>
</div>

{%- schema -%}
{
  "name": "Did You Know",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-4"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Why Choose Us"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Section Description",
      "default": "Why Choose Us"
    },
    {
      "type": "text",
      "id": "secendory-title",
      "label": "Secendory Title",
      "default": "Why Choose Us"
    },
    {
   "type": "text_alignment",
   "id": "alignment",
   "label": "Title alignment",
   "default": "center"
},
{
    "type": "range",
    "id": "icon-size",
    "min": 25,
    "max": 100,
    "step": 5,
    "unit": "px",
    "label": "Icon Size",
    "default": 35
},

    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    }
  ],
  "blocks": [
    {
      "type": "feature_block",
      "name": "Feature Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon",
          "info": "Select an icon for this feature."
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Feature Title"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
         
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Features",
      "name": "Did You Know",
      "settings": {
        "title": "Our Features"
      }
    }
  ]
}
{%- endschema -%}
